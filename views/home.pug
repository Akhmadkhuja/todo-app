extends layout.pug 

block First page 
    if error 
        p.error Fill the input 

    if success 
        p.success Nice job 

    form.form(action='/add' method='POST')
        input.input(type="text" placeholder='My description' name='todo')
        button.btn Add 

    div.todos 
            if todos.length 
                each todo in todos
                    p.todo #{ todo.description }

            else 
                p.todo No todo available 